<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto mt-2">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                    <form action=" /links/add" method="POST">

                            <div class="form-group mb-2">
                                <input type="text" value="{{link.title}}" class="form-control" name="title"
                                    placeholder="Title" autofocus>
                            </div>
                            <div class="form-group mb-2">
                                <input type="url" value="{{link.url}}" name="url" class="form-control"
                                    placeholder="url">
                            </div>
                            <div class="form-group mb-2">
                                <textarea name="description" rows="2" class="form-control"
                                    placeholder="Description">{{link.description}}</textarea>
                            </div>
                            <div class="form-group mb-2">
                                <button class="btn btn-success btn-block">
                                    Save
                                </button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>